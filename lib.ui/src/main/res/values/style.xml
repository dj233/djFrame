<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divider_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_comment</item>
    </style>

    <style name="divider_v">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_comment</item>
    </style>

    <style name="item_h1" parent="wrap_wrap">
        <item name="android:textColor">@color/item_h1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="item_h2" parent="wrap_wrap">
        <item name="android:textColor">@color/item_h2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_h3" parent="wrap_wrap">
        <item name="android:textColor">@color/item_h3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_h4" parent="wrap_wrap">
        <item name="android:textColor">@color/item_h4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="item_h5" parent="wrap_wrap">
        <item name="android:textColor">@color/item_h5</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="item_img_left_100x100">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:contentDescription">@string/def_img_description</item>
    </style>

    <style name="item_img_middle_360x180">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:contentDescription">@string/def_img_description</item>
    </style>

</resources>